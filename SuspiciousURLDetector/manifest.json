{
  "manifest_version": 3,
  "name": "Suspicious URL Detector",
  "version": "1.0",
  "description": "Detect suspicious URLs and send them for validation.",
  
  "permissions": [
    "tabs",
    "webNavigation"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon48.png"
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

